s=0
a=2
b=3
while (a<=112):
    s=s+a/b
    a=a+2
    b=b+2
print ("олег написал I3",s)

s=0
a=2
m=3
while (a<=35):
    s=a+s
    a=a+m
print("аня написала I1",s)

s=10000
b=0.08
n=0
while (s<=20000):
    s=s+b*s
    n=n+1
print("Аня написала II9", n)

x=float(input())
e=0.0001
s=0
n=0
while (x**n>=e):
    s=s+x**n
    n=n+2
print ("олег написал II4",s)

